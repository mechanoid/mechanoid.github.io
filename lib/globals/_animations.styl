@keyframes pulse {
    0% { transform: scale(1) }
    50% { transform: scale(1.05) }
    100% { transform: scale(1) }
}

@keyframes nav-slide {
    0% { transform: translateX(0%) }
    50% { transform: translateX(-50%) }
    100% { transform: translateX(-100%) }
}

@keyframes nav-toggle-slide {
    0% { transform: translateX(0%) }
    50% { transform: translateX(50%) }
    100% { transform: translateX(100%) }
}
